{
  "compilerOptions": {
    "outDir": "./dist", // 컴파일된 Javascript 출력 디렉토리 설정
    "target": "es5", // 컴파일된 Javascript가 어떤 ECMAScript 버전으로 변환될지 설정
    "module": "esnext", // 모듈 시스템 설정 "esnext"를 사용해서 최신으로 사용하도록 설정
    "jsx": "react-jsx", // React에서 사용하는 JSX 설정
    "noImplicitAny": true, // 암묵적인 any 타입 사용을 금지하는 옵션
    "allowSyntheticDefaultImports": true, // default import를 사용할 수 있도록 허용하는 옵션
    "lib": ["dom", "dom.iterable", "esnext"], // Typescript 컴파일러가 참조할 라이브러리 설정
    "allowJs": true, // Javascript 파일도 컴파일에 포함시킬지 여부 설정
    "skipLibCheck": true, // 라이브러리 파일의 타입 체크를 건너뛸지 여부 설정
    "esModuleInterop": true, // CommonJS와 ES 모듈 간의 상호 운용성을 개선하는 옵션
    "strict": true, // Typescript의 엄격한 타입 체크 옵션을 설정
    "forceConsistentCasingInFileNames": true, // 파일 이름의 대소문자를 일관성 있게 처리하는 옵션
    "moduleResolution": "node", // "node"를 사용하여 Node.js의 모듈 해결 방식 설정
    "resolveJsonModule": true, // JSON 파일도 모듈로 인식할지 여부를 설정
    "isolatedModules": true, // 파일 간의 모듈 연결을 허용하지 않는 옵션
    "baseUrl": ".", // 상대경로를 기준으로 모듈을 해결할 때의 기본 경로 설정
    "paths": {
      // 모듈 이름과 실제 파일 경로를 매핑하는 경로 별칭
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "test"] // 컴파일에 포함할 파일 및 디렉토리 설정
}
